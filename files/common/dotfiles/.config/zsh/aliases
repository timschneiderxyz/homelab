#!/bin/zsh
#        _ _
#   __ _| (_) __ _ ___  ___  ___
#  / _` | | |/ _` / __|/ _ \/ __|
# | (_| | | | (_| \__ \  __/\__ \
#  \__,_|_|_|\__,_|___/\___||___/


# Common
alias \
  ..="cd .." \
  ...="cd ../.." \
  ....="cd ../../.." \
  ls="ls -hN --color=auto --group-directories-first" \
  ll="ls -al" \
  mkd="mkdir -vp" \
  cp="cp -vi" \
  mv="mv -vi" \
  rm="rm -vI" \
  grep="grep --color=auto"

# Apps
alias \
  nv="nvim" \
  g="git" \
  d="docker"

# Utilities
alias \
  update="apt update; apt upgrade -y; apt autoremove -y; apt autoclean -y; zinit update --all"
